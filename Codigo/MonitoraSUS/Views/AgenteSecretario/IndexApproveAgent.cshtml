@model IEnumerable<Model.ViewModel.SolictanteAprovacaoModelView>

@{
    ViewData["Title"] = "IndexApproveAgent";
}
<!-- Page Content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-content">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="card-title  text-muted mb-0">MonitoraSUS</h5>
                            <h5 class="h3 mb-0">Gerenciar Agentes de Saúde</h5>
                        </div>
                        <div class="col text-right">
                            <a href="#" class="btn btn-sm btn-default">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col" class="sort" data-sort="nome">
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </th>
                                    <th scope="col" class="sort" data-sort="cpf">
                                        @Html.DisplayNameFor(model => model.Cpf)
                                    </th>
                                    <th scope="col" class="sort" data-sort="estado">
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </th>
                                    <th scope="col" class="sort" data-sort="cidade">
                                        @Html.DisplayNameFor(model => model.Cidade)
                                    </th>
                                    <th scope="col" class="sort" data-sort="status">
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th scope="col" class="sort" data-sort="acoes">
                                        Ações
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="list">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nome)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cpf)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estado)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cidade)
                                        </td>
                                        <td>
                                            <span class="badge badge-dot mr-4">
                                                @if (item.Status.Equals("A"))
                                                {
                                                    <i class="bg-success"></i>
                                                    <span class="status">Ativo</span>
                                                }
                                                else if (item.Status.Equals("I"))
                                                {
                                                    <i class="bg-danger"></i>
                                                    <span class="status">Bloqueado</span>
                                                }
                                                else if (item.Status.Equals("S"))
                                                {
                                                    <i class="bg-warning"></i>
                                                    <span class="status">Pendente</span>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            @if (item.Status.Equals("S"))
                                            {
                                                <button class="btn btn-icon btn-success btn-sm" title="Ativar" type="button">
                                                    <span class="btn-inner--icon"><i class="fas fa-check"></i></span>
                                                </button>
                                                <button class="btn btn-icon btn-danger btn-sm" title="Descartar" type="button">
                                                    <span class="btn-inner--icon"><i class="fas fa-times"></i></span>
                                                </button>
                                            }
                                            else if (item.Status.Equals("A"))
                                            {
                                                <button class="btn btn-icon btn-warning btn-sm" title="Bloquear" type="button">
                                                    <span class="btn-inner--icon"><i class="fas fa-ban"></i></span>
                                                </button>
                                            }
                                            else if (item.Status.Equals("I"))
                                            {
                                                <button class="btn btn-icon btn-success btn-sm" title="Ativar" type="button">
                                                    <span class="btn-inner--icon"><i class="fas fa-check"></i></span>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>