@model Model.ExameViewModel

@{
    ViewData["Title"] = "Details";

}


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-content">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">


                        <div class="col">
                            <h5 class="card-title  text-muted mb-0">MonitoraSUS</h5>
                            <h5 class="h3 mb-0">Detalhes do exame</h5>
                        </div>
                        <div class="col text-right">

                            @Html.ActionLink("Editar", "Edit", new { id = Model.IdExame }, new { @class = "btn btn-info" })

                            <a class="btn btn-default" asp-action="Index"> <i class="fas fa-arrow-left"></i> Voltar</a>
                        </div>

                    </div>
                </div>
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div>
                            <p>
                                <h4>Paciente:</h4> @Html.DisplayFor(model => model.IdPaciente.Nome)

                            </p>
                            <p>
                                <h4>Data do Exame:</h4> @Html.DisplayFor(model => model.DataExame)
                            </p>
                            <p>
                                <h4>Inicio dos Sintomas:</h4> @Html.DisplayFor(model => model.DataInicioSintomas)
                            </p>
                            <p>
                                <h4>Virus/Bacteria</h4> @Html.DisplayFor(model => model.IdVirusBacteria.Nome)
                            </p>
                            <p>
                                <h4>Agente:</h4>@Html.DisplayFor(model => model.IdAgenteSaude.Nome)
                            </p>

                            <p>

                                <h4>IgG:</h4> @if (Model.IgG == "S")
                                {<div>POSITIVO</div>}
                                @if (Model.IgG == "N")
                                {<div>NEGATIVO</div>}
                                @if (Model.IgG == "I")
                                {<div>INDETERMINADO</div>}
                            </p>
                            <p>
                                <h4>IgM:</h4>  @if (Model.IgM == "S")
                                {<div>POSITIVO</div>}
                                @if (Model.IgM == "N")
                                {<div>NEGATIVO</div>}
                                @if (Model.IgM == "I")
                                {<div>INDETERMINADO</div>}
                            </p>
                            <p>
                                <h4>rt Pcr:</h4> @if (Model.Pcr == "S")
                                {<div>POSITIVO</div>}
                                @if (Model.Pcr == "N")
                                {<div>NEGATIVO</div>}
                                @if (Model.Pcr == "I")
                                {<div>INDETERMINADO</div>}
                            </p>
                            <p>
                                <h4>Resultado:</h4>  @Html.DisplayFor(model => model.Resultado)

                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
